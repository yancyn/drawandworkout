<DataTemplate x:Key="ProjectTemplate">
    <Grid
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:assembly="http://schemas.microsoft.com/wpf/2008/toolkit"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:w="http://schemas.microsoft.com/wpf/2008/toolkit">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>
        <Canvas Background="#FFF5F5DC" Margin="40,40,40,40" Grid.Column="0" />
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" Width="250" HorizontalAlignment="Right" Grid.Column="1">
            <StackPanel>
                <GroupBox Header="Project">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="Reference No." Grid.Column="0" Grid.Row="0" />
                        <TextBlock Text="" Grid.Column="1" Grid.Row="0" />
                        <TextBlock Text="Received Date" Grid.Column="0" Grid.Row="1" />
                        <assembly:DatePicker DisplayDate="2011-03-22T00:00+08:00" FirstDayOfWeek="Sunday" SelectedDate="{x:Null}" SelectedDateFormat="Long" Grid.Column="1" Grid.Row="1" />
                        <TextBlock Text="Created By" Grid.Column="0" Grid.Row="2" />
                        <TextBlock Text="" Grid.Column="1" Grid.Row="2" />
                        <TextBlock Text="Order By" Grid.Column="0" Grid.Row="3" />
                        <TextBox Grid.Column="1" Grid.Row="3" xml:space="preserve" /><TextBlock Text="Customer" Grid.Column="0" Grid.Row="4" /><TextBox Grid.Column="1" Grid.Row="4" xml:space="preserve" /><TextBlock Text="Phone" Grid.Column="0" Grid.Row="5" /><TextBox Grid.Column="1" Grid.Row="5" xml:space="preserve" /><TextBlock Text="Street" Grid.Column="0" Grid.Row="6" /><TextBox MinLines="2" Grid.Column="1" Grid.Row="6" xml:space="preserve" /><TextBlock Text="City" Grid.Column="0" Grid.Row="7" /><TextBox Grid.Column="1" Grid.Row="7" xml:space="preserve" /><TextBlock Text="Postcode" Grid.Column="0" Grid.Row="8" /><TextBox Grid.Column="1" Grid.Row="8" xml:space="preserve" /><TextBlock Text="GPS" Grid.Column="0" Grid.Row="9" /><WrapPanel Grid.Column="1" Grid.Row="9"><TextBox Width="60" xml:space="preserve" /><TextBlock Text=" " /><TextBox Width="60" xml:space="preserve" /></WrapPanel><TextBlock Text="Remarks" Grid.Column="0" Grid.Row="10" /><TextBox MinLines="3" AcceptsReturn="True" Grid.Column="1" Grid.Row="10" xml:space="preserve" /></Grid>
                </GroupBox>
                <GroupBox Header="Summary">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="Granite Type" Grid.Column="0" Grid.Row="0" />
                        <TextBlock Text="" Grid.Column="1" Grid.Row="0" />
                        <TextBlock Text="Deliver Date" Grid.Column="0" Grid.Row="1" />
                        <assembly:DatePicker DisplayDate="2011-03-22T00:00+08:00" FirstDayOfWeek="Sunday" SelectedDate="{x:Null}" Grid.Column="1" Grid.Row="1" />
                        <TextBlock Text="Progress" Grid.Column="0" Grid.Row="2" />
                        <TextBlock Text="" Grid.Column="1" Grid.Row="2" />
                        <TextBlock Text="Total Area(f²)" Grid.Column="0" Grid.Row="3" />
                        <TextBlock Text="" Grid.Column="1" Grid.Row="3" />
                        <TextBlock Text="Total Long(f)" Grid.Column="0" Grid.Row="4" />
                        <TextBlock Text="" Grid.Column="1" Grid.Row="4" />
                        <TextBlock Text="Total Polish(f)" Grid.Column="0" Grid.Row="5" />
                        <TextBlock Text="" Grid.Column="1" Grid.Row="5" />
                        <TextBlock Text="Other" Grid.Column="0" Grid.Row="6" />
                        <TextBlock Text="" Grid.Column="1" Grid.Row="6" />
                    </Grid>
                </GroupBox>
                <GroupBox Header="Details" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</DataTemplate>