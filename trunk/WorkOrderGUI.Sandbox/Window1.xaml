                        <ScaleTransform ScaleX="0.25" ScaleY="0.25" />
                    </Path.RenderTransform>
                </Path>
                <Rectangle Width="50" Height="24" Fill="White" Canvas.Left="125"/>
                <TextBlock Text="39&quot;½" Margin="150,0,0,0" Foreground="Blue" Canvas.Left="-20" />
            </Canvas>


            <TextBlock Text="2'" Margin="60,420,0,0" Foreground="Blue" />
            <TextBlock Text="40'⅛&quot;" Margin="0,210,0,0" Foreground="Blue"/>
        </Canvas>

        <Button Canvas.Left="703" Canvas.Top="539" Height="23" Name="button1" Width="75" Click="button1_Click">Save</Button>
