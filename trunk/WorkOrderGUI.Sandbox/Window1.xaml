                        <ScaleTransform ScaleX="-0.25" ScaleY="0.25" />
                    </Path.RenderTransform>
                </Path>
                <Path Fill="Blue" Data="M 0 40 L 40 20 L 0 0 Z" Canvas.Left="290" Canvas.Top="5">
