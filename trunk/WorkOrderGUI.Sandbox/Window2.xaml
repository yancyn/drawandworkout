<Window x:Class="WorkOrderGUI.Sandbox.Window2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window2">
    <Grid x:Name="PrintingPage" Height="800" Width="600">
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Row="0" Grid.Column="0" Stroke="Black" StrokeThickness="1"/>
        <Rectangle Grid.Row="0" Grid.Column="1" Stroke="Black" StrokeThickness="1"/>
        
        <Rectangle Grid.Row="1" Grid.ColumnSpan="2" Stroke="Black" StrokeThickness="1"/>
    </Grid>
</Window>